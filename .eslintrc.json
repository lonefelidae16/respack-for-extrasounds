{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [ "warn", 4 ],
        "linebreak-style": [ "warn", "unix" ],
        "quotes": [ "error", "single", { "avoidEscape": true } ],
        "semi": [ "warn", "always" ],
        "object-shorthand": "error",
        "no-extra-semi": [ "warn" ],
        "no-unused-vars" : [ "warn" ],
        "no-undef": [ "error" ],
        "no-empty": [ "warn" ]
    }
}
